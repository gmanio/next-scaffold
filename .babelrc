{
  "presets": [
    "next/babel"
  ],
  "plugins": [
    ["@babel/plugin-proposal-decorators", { "legacy": true }],
    ["@babel/plugin-proposal-class-properties", { "loose": true }],
    [
      "styled-components",
      {
        "ssr": true
      }
    ],
    [
      "module-resolver", {
        "root": ["./src"],
        "alias": {
          "@src": "./src",
          "@src/desktop": "./desktop",
          "@src/mobile": "./mobile"
        }
      }
    ]
  ]
}